{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://hypermage.vr/schemas/InteractionEvent.schema.json",
    "title": "Interaction Event",
    "description": "Player interaction event for ephemeral session tracking",
    "type": "object",
    "required": [
        "eventId",
        "timestamp",
        "playerId",
        "sessionId",
        "eventType",
        "ttl"
    ],
    "properties": {
        "eventId": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for this event"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when the event occurred"
        },
        "playerId": {
            "type": "string",
            "description": "Unique identifier for the player"
        },
        "sessionId": {
            "type": "string",
            "format": "uuid",
            "description": "Session this event belongs to"
        },
        "eventType": {
            "type": "string",
            "description": "Type of interaction event (e.g., objective_complete, zone_enter, item_pickup)"
        },
        "data": {
            "type": "object",
            "description": "Event-specific data payload",
            "additionalProperties": true
        },
        "ttl": {
            "type": "integer",
            "minimum": 0,
            "description": "Unix timestamp for DynamoDB TTL (automatic expiration)"
        }
    }
}