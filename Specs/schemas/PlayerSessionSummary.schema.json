{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://hypermage.vr/schemas/PlayerSessionSummary.schema.json",
    "title": "Player Session Summary",
    "description": "Reward-only summary persisted after session completion",
    "type": "object",
    "required": [
        "sessionId",
        "playerId",
        "shardId",
        "startTime",
        "endTime",
        "rewards"
    ],
    "properties": {
        "sessionId": {
            "type": "string",
            "format": "uuid",
            "description": "Unique identifier for the session"
        },
        "playerId": {
            "type": "string",
            "description": "Unique identifier for the player"
        },
        "shardId": {
            "type": "string",
            "description": "Identifier for the game shard"
        },
        "startTime": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of session start"
        },
        "endTime": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of session end"
        },
        "rewards": {
            "type": "object",
            "description": "Rewards granted during the session (reward ID -> boolean flag)",
            "patternProperties": {
                "^[a-z0-9_]+$": {
                    "type": "boolean",
                    "description": "Boolean flag indicating reward was granted"
                }
            },
            "additionalProperties": false
        },
        "ttl": {
            "type": "integer",
            "minimum": 0,
            "description": "Optional Unix timestamp for TTL (if session summaries should expire)"
        }
    }
}